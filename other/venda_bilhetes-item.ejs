<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Bilheteira</title>
  <!-- Bootstrap core CSS-->
  <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom fonts for this template-->
  <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <script src="https://use.fontawesome.com/9a14895eb3.js"></script>
  <!-- Custom styles for this template-->
  <link href="/css/sb-admin.css" rel="stylesheet">
  <!-- Custom icons for this template-->
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

</head>

<script type="text/javascript">
	function removeRecord() {
		if (confirm('Do you really want to remove the record?')) {
			window.open("<%= '/bilhetes/' + bilhete.numero + '/delete'%>")
		}
	}
</script>

<h2><%= (isNew) ? '' : 'Venda de um bilhete ' %></h2>     
<% for (var e of errors) { %>
<div class="alert alert-danger"><%= e.msg %></div>
<%}%>

<body class="bg-dark">
  <div class="container">
	<form class="well form-horizontal" action=" " method="post" name="formbilhete" id="formbilhete">

    <div class="card card-register mx-auto mt-5">
    <div class="card-body">
        <form id="formbilhete">
        	
        <!-- Tipo de bilhete-->
					
							 <div class="form-group">
								 <div class="form-row">
								 <label class="col-md-10 control-label">Tipo de bilhete</label>
								 <div class="col-md-10 selectContainer">
								 <div class="input-group">
									 <span class="input-group-addon"><i class="fa fa-briefcase" aria-hidden="true"></i></span>
								 <select name="tipo_bilhete[]" id = "tipo_bilhete" class="form-control selectpicker" value="<%= bilhete.tipo_bilhete %>">
									 <option>Selecione o tipo de bilhete</option>
									 <option value="Premium">Premium</option>
									 <option value="Standard">Standard</option>
									</select>
								 </div>
							 </div>
						 </div>	
						</div>	

		
					
						<!-- Dia da Sessao-->	
		<div class="form-group">
			<div class="form-row">
		  <label class="col-md-10 control-label">Dia da sessão</label>
			<div class="col-md-10 selectContainer">
			<div class="input-group">
				<span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
			<select name="dia_sessao[]" id = "dia_sessao" class="form-control selectpicker"  value="<%= bilhete.dia_sessao %>">
			  <option>Selecione o dia da sessão que pretende adquirir</option>
			  <option value="2017/01/06">2017/01/06</option>
			  <option value="2017/01/07">2017/01/07</option>
			  <option value="2017/01/08">2017/01/08</option>
			  <option value="2017/01/09">2017/01/09</option>
			</select>
		  </div>
		</div>
	</div>	
</div>

				
					
					<%= bilhete%>
						
				<!-- Preço do bilhete-->
					
							 <div class="form-group">
								 <div class="form-row">
								 <label class="col-md-10 control-label">Preço</label>
								 <div class="col-md-10 selectContainer">
								 <div class="input-group">
									 <span class="input-group-addon"><i class="fa fa-briefcase" aria-hidden="true"></i></span>
								 <select name="preco" id = "preco" class="form-control selectpicker" >
								 
									 <option>Preço do bilhete</option>
									 <option> <%= bilhete%> </option>
									 <option value="35">35€</option>
									</select>
								 </div>
							 </div>
						 </div>	
						</div>			
						

		  <!-- Inserir quantidade de bilhetes-->
       <div class="form-group">
			<div class="form-row">
			<label class="col-md-10 control-label">Quantidade</label>
				<div class="col-md-10 inputGroupContainer">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
						<input name="quantidade_bilhetes" id="quantidadeBilhetes"   class="form-control"  type="number" value="<%= bilhete.quantidade_bilhetes %>">
					</div>
				</div>
			</div>
		 </div>
		 
		 
		 <!-- Valor Total a pagar-->
       <div class="form-group">
			<div class="form-row">
			<label class="col-md-10 control-label">Valor total a pagar</label>
				<div class="col-md-10 inputGroupContainer">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-money" aria-hidden="true"></i></span>
						<input name="valortotal" id="valortotal"   class="form-control"  type="number" value="<%= bilhete.valortotal %>" >
					</div>
				</div>
			</div>
		 </div>

		 <!-- Nome do participante-->
		 
					<div class="form-group">
				 <div class="form-row">
				 <label class="col-md-10 control-label">Nome</label>
					 <div class="col-md-10 inputGroupContainer">
						 <div class="input-group">
							 <span class="input-group-addon"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
							 <input name="nome_participante" id="nome_participante"   class="form-control"  type="text" value="<%= bilhete.nome_participante %>">
						 </div>
					 </div>
				 </div>
				</div>
				
		<!-- Número do bilhete automático-->
          <div class="form-group">
            <div class="form-row">
              <label class="col-md-10 control-label">Número do Bilhete</label>
				<div class="col-md-10 inputGroupContainer">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-ticket aria-hidden="true"></i></span>
						<input name= "numero" id="numBilhete"  class="form-control" value="<%= bilhete.numero %>" type="number">
					</div>
				</div>
            </div>
          </div>		


		 
		 
		 <!--Data de compra-->
		 
		 <div class="form-group">
			<div class="form-row">
			<label class="col-md-10 control-label">Data de compra</label>  
				<div class="col-md-10 inputGroupContainer">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
						<input name="data_compra"  id="data_compra" placeholder="Data de Compra" class="form-control"  type="date" value="<%= bilhete.data_compra %>">
					</div>
				</div>
			</div>	
		 </div>
		 
		 	 

		 <!-- Botão para submeter-->
		 
		 <button type="submit" class="btn btn-default">Save</button>
		 <% if (! isNew) { %>
		 
		 <button type="button" class="btn btn-danger" onclick="removeRecord()">Delete</button>
		 <% } %>

        <!-- Button -->
				<div class="form-group">
				  <label class="col-md-4 control-label"></label>
				  <div class="col-md-4"><br>
					 <a class="btn btn-primary btn-block" onclick="compraBilhete()">Comprar</a>
				  </div>
				</div>

        </form>

      </div>
    </div>
  </div>
  
  <!-- Bootstrap core JavaScript-->
  <script src="/jquery/jquery.min.js"></script>
  <script src="/popper/popper.min.js"></script>
  <script src="/bootstrap/js/bootstrap.min.js"></script>
  <script src="/js/compraBilhete.js"></script>
  <!-- Core plugin JavaScript-->
  <script src="/jquery-easing/jquery.easing.min.js"></script>
  <!--Bootstrap core Jquery-->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


</body>

