<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Registar Patrocinador</title>
  <!-- Bootstrap core CSS-->
  <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom fonts for this template-->
  <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <script src="https://use.fontawesome.com/9a14895eb3.js"></script>
  <!-- Custom styles for this template-->
  <link href="/css/sb-admin.css" rel="stylesheet">
  <!-- Custom icons for this template-->
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>

<script type="text/javascript">
	function removeRecord() {
		if (confirm('Do you really want to remove the record?')) {
			window.open("<%= '/patrocinios/' + patrocinio.nome + '/delete'%>")
		}
	}
</script>

<h2><%= (isNew) ? 'Novo Patrocinio' : 'Registo de Novo Patrocinio ' %></h2>     
<% for (var e of errors) { %>
<div class="alert alert-danger"><%= e.msg %></div>
<%}%>

<body class="bg-dark">
  <div class="container">
	<form action="/patrocinios/<%= (isNew) ? 'create' : patrocinio.nome %>" class="well form-horizontal"  method="post"  id="contact_form" name="form">

    <div class="card card-register mx-auto mt-5">
    <div class="card-body">

        <form id="formspatrocinador">
		
		<!-- Inserir Nome do Patrocinador-->
          <div class="form-group">
            <div class="form-row">
              <label class="col-md-10 control-label">Nome do Patrocinio</label> 
				<div class="col-md-10 inputGroupContainer">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-user-o" aria-hidden="true"></i></span>
						<input name="nome" placeholder="Nome" id="nome" class="form-control"  type="text" value="<%= patrocinio.nome %>" required>
					</div>
				</div>	
            </div>
          </div>
		  
		  
		<!--Valor do Patrocinio-->
			   
		<div class="form-group">
			<div class="form-row">
				<label class="col-md-10 control-label">Valor do Patrocinio</label>  
			<div class="col-md-10 inputGroupContainer">
			<div class="input-group">
				<span class="input-group-addon"><i class="fa fa-money" aria-hidden="true"></i></span>
			<input name="valor" id="valor" placeholder="(Valor do Patrocinio)" class="form-control" type="text" value="<%= patrocinio.valor %>" required>
			</div>
		  </div>
		</div>
		</div>
		
		<!-- Button -->
		
    <div class="">
        <label class="btn btn-default"></label>
        <div class="col-sm-6"><br>
         <a class="btn btn-primary btn-block" onclick="validar()">Validar</a>
        </div>
      </div>
      

      <!-- BotÃ£o para submeter-->

				<button type="submit" class="btn btn-default">Submeter</button>
        <% if (! isNew) { %>
        <button type="button" class="btn btn-danger" onclick="removeRecord()">Delete</button>
              <% } %>
				
        </form>
        
      </div>
    </div>
  </div>
  <!-- Bootstrap core JavaScript-->
  <script src="/jquery/jquery.min.js"></script>
  <script src="/popper/popper.min.js"></script>
  <script src="/bootstrap/js/bootstrap.min.js"></script>
  <!-- Core plugin JavaScript-->
  <script src="/js/validar_patrocinio.js"></script>
  <script src="/jquery-easing/jquery.easing.min.js"></script>
</body>

</html>
