				<title>Registar utilizador</title>
				<!-- Bootstrap core CSS-->
				<link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
				<!-- Custom fonts for this template-->
				<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
				<script src="https://use.fontawesome.com/9a14895eb3.js"></script>
				<!-- Custom styles for this template-->
				<link href="/css/sb-admin.css" rel="stylesheet">
				<!-- Custom icons for this template-->
				<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
			  </head>

	<script type="text/javascript">
		function removeRecord() {
			if (confirm('Do you really want to remove the record?')) {
				window.open("<%= '/users/' + user.username + '/delete'%>")
			}
		}
	</script>

	<h2><%= (isNew) ? '' : 'User Data' %></h2>   

	<% if (errors.length) { %>  
		<div class="alert alert-danger">
			<ul>
			<% for (var e of errors) { %>
				<li><%= e.msg %></li>
			<% }%>
			</ul>
		</div>	
	<% } %>
	
	<body class="bg-dark">
			<div class="container">
			 

	<form class="well form-horizontal" action="/users/<%= (isNew) ? 'create' : user.username %>" method="post">
		
	<div class="card card-register mx-auto mt-5">
      <div class="card-header">Registar Utilizador</div>
      <div class="card-body">
        <form>
        	
        <!-- Inserir Nome do Utilizador-->	
		
		<div class="form-group">
			<div class="form-row">
      			<label class="col-md-10 control-label">Nome:</label>
      			<div class="col-md-10 inputGroupContainer">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-user-o" aria-hidden="true"></i></span>
      					<input type="text" class="form-control" id="nome" placeholder="Introduza o nome" name="nome" value="<%= user.nome %>">
						</div>
					</div>
				</div>
		</div>

		<!-- Inserir Apelido do Utilizador-->
		
		<div class="form-group">
			<div class="form-row">
      			<label class="col-md-10 control-label">Apelido:</label>
      			<div class="col-md-10 inputGroupContainer">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-user-o" aria-hidden="true"></i></span>
						<input type="text" class="form-control" id="apelido" placeholder="Introduza o apelido" name="apelido" value="<%= user.apelido %>">
						</div>
					</div>
				</div>
			</div>
		
		<!-- Inserir Email do Utilizador-->
		<div class="form-group">
			<div class="form-row">
      			<label class="col-md-10 control-label">Email:</label>
      			<div class="col-md-10 inputGroupContainer">
      				<div class="input-group">
      					<span class="input-group-addon"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
      					<input type="email" class="form-control" id="email" placeholder="Introduza o email" name="email" value="<%= user.email %>">
						</div>
					</div>
				</div>
			</div>
			
		<!-- Inserir Username-->	
		
		<div class="form-group">
			<div class="form-row">
     			<label class="col-md-10 control-label">Username:</label>
     			<div class="col-md-10 inputGroupContainer">
     				<div class="input-group">
     					<span class="input-group-addon"><i class="fa fa-user-o" aria-hidden="true"></i></span>
      				<input type="text" class="form-control" id="username" placeholder="Introduza o username" name="username" value="<%= user.username %>" <%= (!isNew) ? 'disabled' : ''%>>
					</div>
				</div>
			</div>
		</div>
		
		<!-- Inserir Password-->
		
    <div class="form-group">
    	<div class="form-row">
      		<label class="col-md-10 control-label">Password:</label>
      			<div class="col-md-10 inputGroupContainer">
      				<div class="input-group">
      				<span class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></span>
      			<input type="password" class="form-control" id="password" placeholder="Introduza a password" name="password">
				</div>
			</div>
		</div>
	</div>	
		    
    <button type="submit" class="btn btn-default">Save</button>
		<% if (! isNew) { %>
			<button type="button" class="btn btn-danger" onclick="removeRecord()">Delete</button>
		<% } %>
		
	</form>
	      
